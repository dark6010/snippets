$scope.update = function($index){
        $scope.loading=true;
        var todo = $scope.todos[$index];
        Todo.replaceById(
        {id: todo.id},
        {
            isDone: todo.isDone,
            title: todo.title
        }
        );
        $scope.loading=false;
  	};
